{{define "content"}}
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {{range .}}
            <div class="bg-white shadow-lg rounded-lg overflow-hidden p-4">
                <img src="https://via.placeholder.com/150" alt="food" class="w-full h-40 object-cover rounded-md">
                <div class="pt-4 text-center">
                    <h3 class="text-xl font-semibold">{{.Name}}</h3>
                    <p class="text-gray-500 text-sm">{{.Description}}</p>
                    <p class="text-lg font-bold text-bbAccent">${{.Price}}</p>
                    <button
                        class="mt-4 py-2 px-6 bg-bbPrimary text-white rounded-full"
                        onclick=""
                    >
                        Add to Cart
                    </button>
                </div>
            </div>
        {{end}}
    </div>
{{end}}
