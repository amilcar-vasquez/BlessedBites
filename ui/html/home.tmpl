{{define "content"}}
<!-- Top Buttons for Related Foods -->
<div class="top-buttons">
    {{range .RandomMenuItems}}
        <a class="btn">{{.Name}}</a>
    {{end}}
</div>

<div class="row" style="margin-top: 2rem;">
    <!-- Sidebar -->
    <div class="col s12 m4 l3">
        <div class="category-sidebar">
            <h6>I'm looking for:</h6>
            {{range .Categories}}
            <div class="category-item">
                <a href="/menu/category/{{.ID}}">{{.Name}}</a>
            </div>
            {{end}}
            <a href="/">Anything delicous</a>
        </div>
        <div class="order-sidebar">
            <h5>Order Summary</h5>
            <p>No items in your order.</p>
            <a href="#" class="btn mustard">Place Order</a>
        </div>
    </div>

    <!-- Menu Items Grid -->
    <div class="col s12 m8 l9">
        <form action="/search" method="GET" class="search-form">
            <div class="search-box-wrapper">
              <input type="text" id="searchBox" name="q" placeholder="Search menu..." autocomplete="off">
              <button type="submit" class="material-icon-button">
                <i class="material-icons">search</i>
              </button>
            </div>
          </form>
        <div id="results"></div>        
        <div id="menuCards" class="row equal-height">
            {{range .MenuItems}}
                <div class="col s12 m6 l4 menu-card">
                    <div class="card">
                        <div class="card-image">
                            <img class="responsive-img" src="/{{.ImageURL}}" alt="{{.Name}}">
                        </div>
                        <div class="card-content">
                            <span class="card-title">{{.Name}}</span>
                            <p>{{.Description}}</p>
                            <p><strong>${{printf "%.2f" .Price}}</strong></p>
                        </div>
                        <div class="card-btn">
                            <a href="#">Add to Order</a>
                        </div>
                    </div>
                </div>
            {{end}}
        </div>
        
    </div>
</div>
</div>

{{end}}
