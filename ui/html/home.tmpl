{{define "content"}}
<!-- Top Buttons for Related Foods -->
<div class="top-buttons">
    {{range .RandomMenuItems}}
        <a class="btn">{{.Name}}</a>
    {{end}}
</div>

<div class="row" style="margin-top: 2rem;">
    <!-- Sidebar -->
    <div class="col s12 m4 l3">
        <div class="category-sidebar">
            <h5>Categories</h5>

            {{range .Categories}}
            <div class="category-item">
                <span>{{.Name}}</span>
            </div>

            {{end}}
        </div>
        <div class="order-sidebar">
            <h5>Order Summary</h5>
            <p>No items in your order.</p>
            <a href="#" class="btn mustard">Place Order</a>
        </div>
    </div>

    <!-- Menu Items Grid -->
    <div class="col s12 m8 l9">
        <div class="row">
            <!-- Repeatable Card Layout -->
            {{range .MenuItems}}
                <div class="col s12 m6 l4">
                    <div class="card">
                        <div class="card-image">
                            <img src="/static/img/foodIcon.jpg" alt="{{.Name}}">
                        </div>
                        <div class="card-content">
                            <span class="card-title">{{.Name}}</span>
                            <p>{{.Description}}</p>
                            <p><strong>${{printf "%.2f" .Price}}</strong></p>
                        </div>
                        <div class="card-action">
                            <a href="#">Add to Order</a>
                        </div>
                    </div>
                </div>
            {{end}}
            <!-- ... more items here ... -->
        </div>
    </div>
</div>
</div>

{{end}}
