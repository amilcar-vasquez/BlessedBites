{{define "content"}}

<div class="row">
    <!-- Sidebar for Categories -->
    <div class="col s12 m4 l3">
      <h5>Categories</h5>
  
      <!-- Add Category Form -->
      <form action="/category/add" method="POST">
        <div class="input-field">
          <input type="text" id="name" name="name" required>
          <label for="name">New Category</label>
        </div>
        <button type="submit" class="btn green">Add</button>
      </form>
  
      <ul class="collection with-header" style="margin-top: 2rem;">
        <li class="collection-header"><h6>Existing</h6></li>
        {{ range .Categories }}
        <li class="collection-item">
          {{ .Name }}
          <form action="/category/delete" method="POST" style="display:inline;">
            <button type="submit" class="btn-flat red-text right" onclick="return confirm('Delete this category?');">
              <i class="material-icons">delete</i>
            </button>
          </form>
        </li>
        {{ end }}
      </ul>
    </div>
  
    <!-- Main Menu Content -->
    <div class="col s12 m8 l9">
      <div class="container" style="margin-top: 3rem;">
        <h4>{{ .HeaderText }}</h4>
      
        <form action="{{ if .MenuItem }}/menu/update{{ else }}/menu/add/new{{ end }}" method="POST">
          {{ if .MenuItem }}
            <input type="hidden" name="id" value="{{ .MenuItem.ID }}">
          {{ end }}
      
          <div class="input-field">
            <input type="text" name="name" id="name" value="{{ if .MenuItem }}{{ .MenuItem.Name }}{{ end }}" required>
            <label for="name" class="active">Name</label>
          </div>
      
          <div class="input-field">
            <textarea name="description" id="description" class="materialize-textarea">{{ if .MenuItem }}{{ .MenuItem.Description }}{{ end }}</textarea>
            <label for="description" class="active">Description</label>
          </div>
      
          <div class="input-field">
            <input type="number" name="price" id="price" value="{{ if .MenuItem }}{{ .MenuItem.Price }}{{ end }}" step="0.01" required>
            <label for="price" class="active">Price (BZD)</label>
          </div>
      
          <div class="input-field">
            <select name="category_id" id="category_id">
              {{ range .Categories }}
                <option value="{{ .ID }}" {{ if $.MenuItem }}{{ if eq .ID $.MenuItem.CategoryID }}selected{{ end }}{{ end }}>{{ .Name }}</option>
              {{ end }}
            </select>
            <label for="category_id">Category</label>
          </div>
      
          <div class="right-align">
            <button type="submit" class="btn waves-effect green darken-2">{{ if .MenuItem }}Update{{ else }}Add{{ end }} Menu Item</button>
          </div>
        </form>
      </div>
    </div>
</div>
{{ end }}